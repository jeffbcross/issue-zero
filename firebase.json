{
  "firebase": "issue-zero",
  "public": "dist",
  "ignore": [
    "firebase.json",
    "**/.*",
    "**/node_modules/**"
  ],
  "rewrites": [{
    "source": "/issues",
    "destination": "/index.html"
  },{
    "source": "/login",
    "destination": "/index.html"
  },{
    "source": "/issues/close",
    "destination": "/index.html"
  },{
    "source": "/issues/list",
    "destination": "/index.html"
  },{
    "source": "/issues/triage",
    "destination": "/index.html"
  }]
}